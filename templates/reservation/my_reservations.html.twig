{% extends 'base.html.twig' %}

{% block title %}Réservez une voiture{% endblock %}

{% block body %}
<div class="container mx-auto py-8">
    <h1 class="text-2xl font-semibold mb-6">Liste des voitures disponibles</h1>

    <table class="min-w-full border-collapse border border-gray-300 shadow-lg">
        <thead class="bg-gray-200 text-left">
            <tr>
                <th class="border border-gray-300 px-4 py-2 font-semibold">Modèle</th>
                <th class="border border-gray-300 px-4 py-2 font-semibold">Marque</th>
                <th class="border border-gray-300 px-4 py-2 font-semibold">Prix (€ / jour)</th>
                <th class="border border-gray-300 px-4 py-2 font-semibold">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for resa in reservations %}
                <tr class="hover:bg-gray-100">
                    <td class="border border-gray-300 px-4 py-2">{{ resa.getCar.getModel.name }}</td>
                    <td class="border border-gray-300 px-4 py-2">{{ resa.getCar.getModel.brand }}</td>
                    <td class="border border-gray-300 px-4 py-2">{{ resa.getCar.price }}</td>
                    <td class="border border-gray-300 px-4 py-2">
<form action="{{ path('app_delete_reservation', {id: resa.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete_reservation_' ~ resa.id) }}">
    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
        Supprimer
    </button>
</form>


                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-gray-500 px-4 py-4">
                        Aucune réservation disponible pour le moment.
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
